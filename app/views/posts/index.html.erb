<% @posts.each do |post| %>
  <div class="container">
    <div class="row">
      <div class="col"></div>
        <div class="col-8">
          <div class="card mb-3">
            <div class="row g-0">
              <div class="col-md-4">
                <div class="ratio" style="height:250px;overflow:hidden">
                  <% if post.image %>
                    <%= link_to post do %>
                      <%= image_tag post.image_url, class: 'embed-responsive-item img-thumbnail' %>
                    <% end %>
                  <% else %>
                    <h2>No photo :C </h2>
                  <% end %>
                </div>
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= link_to post.title, post %></h5>
                  <p class="card-text"><%= post.body %></p>
                  <p class="card-text"><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></p>
                  <p class="card-text"><small class="text-muted"><%= post.created_at %></small></p>
                  <hr>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col"></div>
      </div>
    </div>
  </div>
<% end %>
